ROBLOX_REMOVE_SECRET=<exact same secret set in the Node service>

# --- Application / AI Review ---
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o-mini         # default used if not set

# Auto-accept thresholds
APPLICATION_MIN_SCORE=80         # >= accepted automatically (and no critical flags)
APPLICATION_BORDERLINE_MIN=65    # >= queued for staff review; else reject

# Roblox auto-rank on accept (via your Node service)
APPLICATION_ACCEPT_ROLE_ID=00000000   # Roblox Group Role ID to assign on acceptance

# Optional Discord role to auto-assign on acceptance (e.g., "Medical Department")
APPLICATION_DISCORD_ROLE_ID=        # e.g., 1405988543230382091

# Optional: channel to post staff review panels for borderline/reject
APPLICATION_REVIEW_CHANNEL_ID=      # falls back to COMMAND_LOG_CHANNEL_ID if not set
